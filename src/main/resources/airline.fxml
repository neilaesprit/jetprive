<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.AirlaneController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
    <!-- Section Gestion des Compagnies Aériennes -->
    <Label text="Gestion des Compagnies Aériennes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="airlineTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Nom" prefWidth="200"/>
            <TableColumn fx:id="countryColumn" text="Pays" prefWidth="150"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Pays :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="countryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#addAirline"/>
        <Button text="Modifier" onAction="#updateAirline"/>
        <Button text="Supprimer" onAction="#deleteAirline"/>
        <Button text="Réinitialiser" onAction="#refresh"/>
    </HBox>

    <Separator/>
    <Button text="Retour à l'interface Admin" onAction="#goBackToAdmin" />

    <!-- Section Météo -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Vérifier la Météo" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <TextField fx:id="cityField" promptText="Nom de la ville" />

        <Button text="Afficher Météo" onAction="#getWeather" />

        <Label fx:id="tempLabel" />
        <Label fx:id="humidityLabel" />
        <Label fx:id="descLabel" />
    </VBox>


</VBox>
